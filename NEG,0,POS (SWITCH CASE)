#include<stdio.h>
int main()
{
	int a;
	printf("enter a number");
	scanf("%d",&a);

	switch(a>0)
	{
		case 1:
			printf("%d is positive");
			break;
    case 0:
	    switch(a<0)
	    {
		case 0:
			printf("%d is zero");
			break;
		case 1:
			printf("%d is negative");
			break;
        }
    break;
   }
	return 0;
}
